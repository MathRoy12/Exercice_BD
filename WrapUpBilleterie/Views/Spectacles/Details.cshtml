@model WrapUpBilleterie.ViewModels.SpectaclesAfficheRepresentationViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Spectacle</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.vwSpectacleVue.Nom)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.vwSpectacleVue.Nom)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.vwSpectacleVue.Debut)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.vwSpectacleVue.Debut)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.vwSpectacleVue.Fin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.vwSpectacleVue.Fin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.vwSpectacleVue.Prix)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.vwSpectacleVue.Prix)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AfficheContent)
        </dt>
        <dd class="col-sm-10">
            <img src="data:image/png;base64,@(Model.AfficheContent)" alt="affiche">
        </dd>
    </dl>
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Representations.First().DateHeureRepresentation)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Representations)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DateHeureRepresentation)
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.vwSpectacleVue.SpectacleId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>